<mamelayout version="2">

<!-- define elements -->

	<element name="red"><rect><color red="1.0" green="0.1" blue="0.15" /></rect></element>

	<element name="redm" defstate="0">
		<rect state="0"><color red="0.125" green="0.012" blue="0.019" /></rect>
		<rect state="1"><color red="1" green="1" blue="1" /></rect>
	</element>

	<element name="line45">
		<image><data><![CDATA[
			<svg xmlns="http://www.w3.org/2000/svg" version="1.1" width="100" height="100">
				<rect width="17" height="62" x="0" y="20" transform="rotate(-45.0)" fill="#ffffff" />
			</svg>
		]]></data></image>
	</element>

	<element name="digit" defstate="0"><led7seg><color red="1.0" green="0.1" blue="0.15" /></led7seg></element>

	<element name="seg_dash" defstate="0">
		<rect state="1"><color red="1.0" green="0.1" blue="0.15" /></rect>
		<rect state="0"><color red="0.125" green="0.012" blue="0.019" /></rect>
	</element>

	<element name="gled" defstate="0">
		<disk state="1"><color red="0.2" green="1.0" blue="0.2" /></disk>
		<disk state="0"><color red="0.04" green="0.2" blue="0.04" /></disk>
	</element>

	<element name="text_right">
		<text string="RIGHT"><color red="0.5" green="0.4" blue="0.3" /></text>
	</element>


<!-- build screen -->

	<view name="Internal Layout">
		<bounds left="0" right="93.5" top="0" bottom="15" />

		<element name="8.a" ref="gled"><bounds x="84.5" y="5" width="4.5" height="4.5" /></element>
		<element ref="text_right"><bounds x="80" y="10" width="14" height="4.5" /></element>

		<element name="digit0" ref="digit"><bounds x="0" y="0" width="10" height="15" /></element>
		<element name="digit1" ref="digit"><bounds x="10" y="0" width="10" height="15" /></element>

		<element name="digit3" ref="digit"><bounds x="30" y="0" width="10" height="15" /></element>
		<element name="digit4" ref="digit"><bounds x="40" y="0" width="10" height="15" /></element>
		<element name="digit5" ref="digit"><bounds x="50" y="3.5" width="10" height="15" /></element>
		<element name="digit6" ref="digit"><bounds x="60" y="0" width="10" height="15" /></element>
		<element name="digit7" ref="digit"><bounds x="70" y="0" width="10" height="15" /></element>

		<!-- math symbols custom digit -->
		<element ref="line45"><bounds x="20" y="3" width="6" height="6" /></element>
		<element ref="line45"><bounds x="24" y="3" width="6" height="6" /><orientation flipx="yes" /></element>
		<element ref="line45"><bounds x="19" y="8.25" width="6" height="6" /><orientation flipx="yes" /></element>
		<element ref="line45"><bounds x="25" y="8.25" width="6" height="6" /></element>

		<element ref="red" blend="multiply"><bounds x="20.33" y="0" width="9.33" height="15" /></element>

		<element name="2.5" ref="redm" blend="multiply"><bounds x="20.33" y="0" width="4.66" height="7.5" /></element>
		<element name="2.1" ref="redm" blend="multiply"><bounds x="25" y="0" width="4.66" height="7.5" /></element>
		<element name="2.2" ref="redm" blend="multiply"><bounds x="20.33" y="7.5" width="4.66" height="7.5" /></element>
		<element name="2.6" ref="redm" blend="multiply"><bounds x="25" y="7.5" width="4.66" height="7.5" /></element>

		<element name="2.4" ref="seg_dash"><bounds x="20.75" yc="7.5" width="8.5" height="1" /></element>

		<element name="2.0" ref="seg_dash"><bounds xc="25" y="2.5" width="1" height="4" /></element>
		<element name="2.3" ref="seg_dash"><bounds xc="25" y="8.5" width="1" height="4" /></element>

	</view>
</mamelayout>
