<mamelayout version="2">

<!-- note: same as lilprof.lay, except that the EQUALS digit is at the same height as the other digits -->

<!-- define elements -->

	<element name="red"><rect><color red="1.0" green="0.1" blue="0.15" /></rect></element>

	<element name="redm" defstate="0">
		<rect state="0"><color red="0.125" green="0.012" blue="0.019" /></rect>
		<rect state="1"><color red="1" green="1" blue="1" /></rect>
	</element>

	<element name="line22">
		<image><data><![CDATA[
			<svg xmlns="http://www.w3.org/2000/svg" version="1.1" width="100" height="100">
				<rect width="18" height="200" x="0" y="-10" transform="rotate(-22.0)" fill="#ffffff" />
			</svg>
		]]></data></image>
	</element>

	<element name="digit" defstate="0"><led7seg><color red="1.0" green="0.1" blue="0.15" /></led7seg></element>

	<element name="seg_dot" defstate="0">
		<disk state="1"><color red="1.0" green="0.1" blue="0.15" /></disk>
		<disk state="0"><color red="0.125" green="0.012" blue="0.019" /></disk>
	</element>
	<element name="seg_dash" defstate="0">
		<rect state="1"><color red="1.0" green="0.1" blue="0.15" /></rect>
		<rect state="0"><color red="0.125" green="0.012" blue="0.019" /></rect>
	</element>


<!-- build screen -->

	<view name="Internal Layout">
		<bounds left="0" right="90" top="0" bottom="15" />

		<element name="digit8" ref="digit">
			<bounds x="0" y="0" width="10" height="15" />
		</element>
		<element name="digit7" ref="digit">
			<bounds x="10" y="0" width="10" height="15" />
		</element>

		<element name="digit5" ref="digit">
			<bounds x="30" y="0" width="10" height="15" />
		</element>
		<element name="digit4" ref="digit">
			<bounds x="40" y="0" width="10" height="15" />
		</element>
		<element name="digit3" ref="digit">
			<bounds x="50" y="0" width="10" height="15" />
		</element>
		<element name="digit2" ref="digit">
			<bounds x="60" y="0" width="10" height="15" />
		</element>
		<element name="digit1" ref="digit">
			<bounds x="70" y="0" width="10" height="15" />
		</element>
		<element name="digit0" ref="digit">
			<bounds x="80" y="0" width="10" height="15" />
		</element>

		<!-- math symbols custom digit -->
		<element ref="line22"><bounds x="21.5" y="1" width="5.5" height="5.5" /></element>
		<element ref="line22"><bounds x="25.25" y="1" width="5.5" height="5.5" /><orientation flipy="yes" /></element>
		<element ref="line22"><bounds x="21.5" y="8.5" width="5.5" height="5.5" /><orientation flipy="yes" /></element>
		<element ref="line22"><bounds x="25.25" y="8.5" width="5.5" height="5.5" /></element>

		<element ref="red" blend="multiply"><bounds x="21" y="0.5" width="8" height="14" /></element>

		<element name="6.6" ref="redm" blend="multiply"><bounds x="21" y="0.5" width="4" height="7" /></element>
		<element name="6.1" ref="redm" blend="multiply"><bounds x="25" y="0.5" width="4" height="7" /></element>
		<element name="6.4" ref="redm" blend="multiply"><bounds x="21" y="7.5" width="4" height="7" /></element>
		<element name="6.2" ref="redm" blend="multiply"><bounds x="25" y="7.5" width="4" height="7" /></element>

		<element name="6.5" ref="seg_dash"><bounds x="21.5" yc="7.5" width="7" height="1" /></element>
		<element name="6.0" ref="seg_dot"><bounds xc="25" yc="3.5" width="1.5" height="1.5" /></element>
		<element name="6.3" ref="seg_dot"><bounds xc="25" yc="11.5" width="1.5" height="1.5" /></element>

	</view>
</mamelayout>
