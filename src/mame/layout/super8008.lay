<mamelayout version="2">

	<element name="green_led">
		<disk state="1">
			<color red="0.0" green="1.0" blue="0.0" />
		</disk>
	</element>

	<element name="yellow_led">
		<disk state="1">
			<color red="1.0" green="1.0" blue="0.0" />
		</disk>
	</element>

	<element name="orange_led">
		<disk state="1">
			<color red="1.0" green="0.6471" blue="0.0" />
		</disk>
	</element>

	<repeat count="8">
		<param name="n" start="1" increment="1" />
		<element name="label_b~n~">
			<text string="b~n~">
				<color red="1.0" green="1.0" blue="1.0" />
			</text>
		</element>
	</repeat>

