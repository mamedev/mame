	TMP = read_pc();
	TMP = set_h(TMP, read_pc());
	PC = read(TMP);
	PC = set_h(PC, read(set_l(TMP, TMP+1)));
	TMP2 = read(TMP+2);
	set_codebank(TMP2);
	prefetch();
