//============================================================
//
//  gui_blend.json: Generic modulate-blend shader for GUI
//  elements.
//
//============================================================
{
    "blend": {
    	"equation": "add",
    	"srcColor": "srcalpha",
    	"dstColor": "1-srcalpha",
    	"srcAlpha": "srcalpha",
    	"dstAlpha": "1-srcalpha"
    },
    "depth": {
    	"function": "always"
    },
    "cull": { "mode": "none" },
    "write": {
    	"rgb": true,
    	"alpha": true
    },
    "vertex": "vs_gui",
    "fragment": "fs_gui",
    "uniforms": [
    	{ "name": "s_tex", "type": "int",  "values": [ 1.0 ] }
    ]
}