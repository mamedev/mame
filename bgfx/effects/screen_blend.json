//============================================================
//
//  screen_blend.json: Shader used when drawing a final
//  post-processed screen image to the output window with
//  modulate blending.
//
//============================================================
{
    "blend": {
    	"equation": "add",
    	"srcColor": "srcalpha",
    	"dstColor": "1-srcalpha",
    	"srcAlpha": "srcalpha",
    	"dstAlpha": "1-srcalpha"
    },
    "depth": {
    	"function": "always"
    },
    "cull": { "mode": "none" },
    "write": {
    	"rgb": true,
    	"alpha": true
    },
    "vertex": "vs_screen",
    "fragment": "fs_screen",
    "uniforms": [
    	{ "name": "s_tex", "type": "int",  "values": [ 1.0 ] },
    	{ "name": "u_tint", "type": "vec4", "values": [ 1.0, 1.0, 1.0, 1.0 ] }
	]
}