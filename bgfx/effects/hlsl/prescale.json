//============================================================
//
//  prescale.json: Unfiltered upscale shader for CRT
//  simulation.
//
//============================================================
{
    "blend": {
    	"equation": "add",
    	"srcColor": "srcalpha",
    	"dstColor": "1-srcalpha",
    	"srcAlpha": "srcalpha",
    	"dstAlpha": "1-srcalpha"
    },
    "depth": {
    	"function": "always"
    },
    "cull": { "mode": "none" },
    "write": {
    	"rgb": true,
    	"alpha": true
    },
    "vertex": "vs_prescale",
    "fragment": "fs_prescale",
    "uniforms": [
    	{ "name": "s_tex",          "type": "int",  "values": [ 1.0 ] },
    	{ "name": "u_source_dims",  "type": "vec4", "values": [ 1.0, 1.0, 0.0, 0.0 ] },
    	{ "name": "u_tex_size0",    "type": "vec4", "values": [ 1.0, 1.0, 0.0, 0.0 ] }
    ]
}